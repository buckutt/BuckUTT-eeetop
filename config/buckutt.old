#! /bin/sh
### BEGIN INIT INFO
# Provides:          buckutt
# Required-Start:    $remote_fs $syslog
# Required-Stop:     $remote_fs $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Init ntp and vpn and session cleaning
### END INIT INFO

case "$1" in
  start)
  	/bin/rm -rf /home/buckutt
  	/bin/cp -Rf /opt/buckutt /home/
  	/bin/chown -R buckutt:buckutt /home/buckutt
  	/bin/chmod u+wx /home/buckutt
	/usr/sbin/ntpd -ngq >/dev/null &
	/usr/sbin/ntpd -g >/dev/null
	/usr/sbin/service openvpn start 
	/usr/bin/python3.2 /root/pertelian.py 2>&1 >/dev/null &
	;;
  stop)
	/usr/sbin/service openvpn stop
	/usr/bin/pkill ntpd
	/usr/bin/pkill python3.2
	;;
  status)
	status_of_proc "$DAEMON" "$NAME" && exit 0 || exit $?
	;;
  restart|force-reload)
	/usr/sbin/service buckutt stop
	/usr/sbin/service buckutt start
	;;
  *)
	echo "Usage: buckutt {start|stop|status|restart|force-reload}" 
>&2
	exit 3
	;;
esac

:
